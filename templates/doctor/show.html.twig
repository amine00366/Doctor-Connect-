{% extends 'admin.html.twig' %}
{% block body %}
<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4 col-xlg-3 col-md-5">
                <div class="card">
                    <div class="card-body">
                        <center class="mt-4">
                            <img src="images.png" class="img-circle" width="150" />
                            <h3 class="card-title mt-2">{{ doctor.nom }} {{ doctor.prenom }}</h3>
                            <h6 class="card-subtitle">{{ doctor.Specialite }}</h6>
                            <div class="row text-center justify-content-md-center">
                               
                            </div>
                        </center>
                    </div>
                </div>
            </div>

            <div class="col-lg-8 col-xlg-9 col-md-7">
                <div class="card">
                    <!-- Tab panes -->
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Nom</th>
                                    <td>{{ doctor.nom }}</td>
                                </tr>
                                <tr>
                                    <th>Prenom</th>
                                    <td>{{ doctor.prenom }}</td>
                                </tr>
                                <tr>
                                    <th>Cin</th>
                                    <td>{{ doctor.Cin }}</td>
                                </tr>
                                <tr>
                                    <th>Age</th>
                                    <td>{{ doctor.Age }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ doctor.email }}</td>
                                </tr>
                                <tr>
                                    <th>Specialite</th>
                                    <td>{{ doctor.Specialite }}</td>
                                </tr>
                                <tr>
                                    <th>Diplome</th>
                                    <td>{{ doctor.Diplome }}</td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="form-group">
                            <div class="col-sm-12">
                                {# <a href="{{ path('app_doctor_edit', {'id': doctor.id}) }}" class="btn btn-success">Update Profile</a> #}
                                <a href="{{ path('app_doctor_index') }}" class="btn btn-primary">Back to List</a>
                                {{ include('doctor/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
