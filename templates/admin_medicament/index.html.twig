{% extends 'admin.html.twig' %}
{% block title %}Medicament index{% endblock %}
{% block body %}
<div style="margin-left:20%;">
    <h1>Liste des Medicaments</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Categorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medicament in medicaments %}
            <tr>
                <td><img style="width:50px" src="{{ asset('assert2/img/' ~ medicament.image) }}" class="card-img-top" alt=""></td>
                <td>{{ medicament.nom }}</td>
                <td>{{ medicament.description }}</td>
                <td>{{ medicament.prix }}</td>
                {# <td>{{ medicament.getIdCategorie().getNom() }}</td> #}
                <td>
                    <a class="btn btn-info" href="{{ path('app_admin_medicament_show', {'id': medicament.id}) }}">Voir</a>
                    <a class="btn btn-info" href="{{ path('app_admin_medicament_edit', {'id': medicament.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun Medicament</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_admin_medicament_new') }}">Ajouter</a>
</div>
  <div class="pagination">
                            <style>
                                .pagination {
                                    display: flex;
                                    justify-content: center;
                                    align-items: center;
                                }

                                .pagination a,
                                .pagination span {
                                    padding: 5px 10px;
                                    margin: 0 5px;
                                    border-radius: 5px;
                                    text-decoration: none;
                                    color: #333;
                                    background-color: #f1f1f1;
                                    border: 1px solid #ccc;
                                }

                                .pagination .active a,
                                .pagination a:hover {
                                    background-color: #333;
                                    color: #fff;
                                    border-color: #333;
                                }
                            </style>
                                {{ knp_pagination_render(medicaments) }}
                        </div>
{% endblock %}
