{% extends 'base.html.twig' %}

{% block title %}New patient{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
<div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
  <div style="background-color: #f5f5f5; border-radius: 5px; padding: 30px;">
    <h1 style="text-align: center;">Register</h1>

    {{ form_start(registrationForm) }}
        <div class="row">
    <div class="col-md-6">
      {{ form_row(registrationForm.Nom, {
        'label_attr': {
          'class': 'form-label'
        },
        'attr': {
          'class': 'form-control',
          'placeholder': 'Nom'
        }
      }) }}

      {{ form_row(registrationForm.Prenom, {
        'label_attr': {
          'class': 'form-label'
        },
        'attr': {
          'class': 'form-control',
          'placeholder': 'Prenom'
        }
      }) }}

      {{ form_row(registrationForm.Adresse, {
        'label_attr': {
          'class': 'form-label'
        },
        'attr': {
          'class': 'form-control',
          'placeholder': 'Adresse'
        }
      }) }}

      {{ form_row(registrationForm.Cin, {
        'label_attr': {
          'class': 'form-label'
        },
        'attr': {
          'class': 'form-control',
          'placeholder': 'Cin'
        }
      }) }}
    </div>
    <div class="col-md-6">
      {{ form_row(registrationForm.Age, {
        'label_attr': {
          'class': 'form-label'
        },
        'attr': {
          'class': 'form-control',
          'placeholder': 'Age'
        }
      }) }}

      {{ form_row(registrationForm.email, {
        'label_attr': {
          'class': 'form-label'
        },
        'attr': {
          'class': 'form-control',
          'placeholder': 'Email'
        }
      }) }}

      {{ form_row(registrationForm.plainPassword, {
        'label_attr': {
          'class': 'form-label'
        },
        'attr': {
          'class': 'form-control',
          'placeholder': 'Password'
        }
      }) }}

      {{ form_row(registrationForm.agreeTerms, {
        'label_attr': {
          'class': 'form-check-label'
        },
        'attr': {
          'class': 'form-check-input'
        }
      }) }}
    </div>
  </div>

  <div style="display: flex; justify-content: center; margin-top: 20px;">
    <button type="submit" class="btn btn-primary">Register</button>
  </div>
    {{ form_end(registrationForm) }}
  </div>
</div>

<style>
  .form-label {
    font-weight: bold;
    margin-bottom: 10px;
  }

  .form-control {
    border: none;
    border-radius: 10px;
    padding: 12px 20px;
    margin-bottom: 20px;
    box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;
  }

  .form-check-label {
    margin-left: 5px;
  }
</style>

{% endblock %}
