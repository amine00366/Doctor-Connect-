{% extends 'admin.html.twig' %}

{% block title %}TypeReclamation index{% endblock %}

{% block body %}
<div style="margin-left: 280px; width: 80% ">
    <table class="table" >
        <thead>
            <tr>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_reclamation in type_reclamations %}
            <tr>
                <td>{{ type_reclamation.nom }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('app_type_rec_admin_show', {'id': type_reclamation.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_type_rec_admin_edit', {'id': type_reclamation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_type_rec_admin_new') }}">Nouveau type</a>
</div>
{% endblock %}
